@using CTGroup.BO.Web.Common
@model CTGroup.BO.Web.Models.PaymentRequestDetailSearchModel
<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Quản lý đề nghị thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <ol class="breadcrumb">
            <li class="active">
                <strong>Quản lý kế hoạch thu chi</strong>
            </li>
        </ol>
    
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInUp">

    <div class="ibox">
        <div class="ibox-title">
            <h5>Tìm kiếm</h5>
        </div>
        <div class="ibox-content">
            @using (Ajax.BeginForm("ListDetail2", "PaymentRequest", new AjaxCommonOption() { UpdateTargetId = "content" }))
            {
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Mã</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Loại</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.Type, null, "--------", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Từ ngày dự kiến chi</label>
                                <div class="col-md-8">
                                    <div class="input-group date">
                                        <input type="text" name="FromDate" class="form-control" data_val="false">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Đến ngày dự kiến chi</label>
                                <div class="col-md-8">
                                    <div class="input-group date">
                                        <input type="text" name="ToDate" class="form-control" data_val="false" >
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Trạng thái</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.Status, null,  new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <button class="btn btn-primary" type="submit" id="btnSearch">Tìm</button>
                        </div>
                    </div>
                </div>
            }

            <div id="content" class="loading">

            </div>
        </div>
    </div>
</div>

